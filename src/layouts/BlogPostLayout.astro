---
const { frontmatter, url } = Astro.props;

// Get all posts for "Related Posts"
const allPosts = await Astro.glob("../pages/posts/**/*.md");
const relatedPosts = allPosts
    .filter((p) => p.url !== url)
    .filter(
        (p) =>
            p.frontmatter.category === frontmatter.category ||
            !frontmatter.category,
    )
    .slice(0, 3);

// Calculate reading time
const content = await Astro.slots.render("default");
const words = content.replace(/<[^>]*>/g, "").split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(words / 200));
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{frontmatter.title}</title>
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, sans-serif;
                margin: 0;
                padding: 60px 20px;
                background: #fafafa;
                color: #111;
                line-height: 1.75;
            }

            .wrapper {
                max-width: 700px;
                margin: 0 auto;
            }

            .back {
                color: #888;
                text-decoration: none;
                font-size: 0.85rem;
                transition: color 0.15s;
            }

            .back:hover {
                color: #4f46e5;
            }

            header {
                margin-bottom: 40px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e5e5e5;
            }

            h1 {
                font-size: 1.6rem;
                font-weight: 600;
                letter-spacing: -0.02em;
                margin: 24px 0 12px 0;
                line-height: 1.3;
            }

            .meta {
                color: #888;
                font-size: 0.85rem;
                display: flex;
                gap: 12px;
            }

            .category-tag {
                background: #f0f0f0;
                padding: 2px 8px;
                border-radius: 3px;
                font-size: 0.8rem;
                color: #666;
            }

            .content h2 {
                font-size: 1.2rem;
                font-weight: 600;
                margin-top: 40px;
                margin-bottom: 16px;
            }

            .content p {
                margin-bottom: 1.5em;
            }

            .content a {
                color: #4f46e5;
                text-decoration: underline;
                text-underline-offset: 2px;
            }

            .content img {
                max-width: 100%;
                border-radius: 4px;
                margin: 24px 0;
            }

            .content pre {
                background: #f0f0f0;
                padding: 16px;
                overflow-x: auto;
                border-radius: 6px;
                font-size: 0.9em;
            }

            .content code {
                background: #f0f0f0;
                padding: 2px 6px;
                border-radius: 3px;
                font-size: 0.9em;
            }

            .content pre code {
                background: none;
                padding: 0;
            }

            .content blockquote {
                border-left: 3px solid #4f46e5;
                margin: 24px 0;
                padding-left: 20px;
                color: #555;
                font-style: italic;
            }

            /* Related Posts */
            .related {
                margin-top: 60px;
                padding-top: 30px;
                border-top: 1px solid #e5e5e5;
            }

            .related h3 {
                font-size: 1rem;
                font-weight: 600;
                margin-bottom: 20px;
                color: #333;
            }

            .related-list {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .related-item {
                padding: 12px 0;
                border-bottom: 1px solid #eee;
            }

            .related-item:last-child {
                border-bottom: none;
            }

            .related-item a {
                color: #111;
                text-decoration: none;
                font-weight: 500;
            }

            .related-item a:hover {
                color: #4f46e5;
            }

            .related-meta {
                font-size: 0.8rem;
                color: #888;
                margin-top: 4px;
            }

            /* Comments */
            .comments {
                margin-top: 60px;
                padding-top: 30px;
                border-top: 1px solid #e5e5e5;
            }

            .comments h3 {
                font-size: 1rem;
                font-weight: 600;
                margin-bottom: 20px;
                color: #333;
            }
        </style>
    </head>
    <body>
        <div class="wrapper">
            <a href="/" class="back">‚Üê List</a>

            <header>
                <h1>{frontmatter.title}</h1>
                <div class="meta">
                    <span>{frontmatter.date}</span>
                    {
                        frontmatter.category && (
                            <span class="category-tag">
                                {frontmatter.category}
                            </span>
                        )
                    }
                    <span>{readingTime} min read</span>
                </div>
            </header>

            <div class="content">
                <slot />
            </div>

            {
                relatedPosts.length > 0 && (
                    <section class="related">
                        <h3>More to Read</h3>
                        <ul class="related-list">
                            {relatedPosts.map((post) => (
                                <li class="related-item">
                                    <a href={post.url}>
                                        {post.frontmatter.title}
                                    </a>
                                    <div class="related-meta">
                                        {post.frontmatter.date}
                                    </div>
                                </li>
                            ))}
                        </ul>
                    </section>
                )
            }

            <!-- Comments -->
            <section class="comments">
                <h3>Comments</h3>
                <div id="disqus_thread"></div>
            </section>
        </div>

        <script
            is:inline
            define:vars={{ pageUrl: Astro.url.href, pageId: frontmatter.title }}
        >
            var disqus_config = function () {
                this.page.url = pageUrl;
                this.page.identifier = pageId;
            };
            (function () {
                var d = document,
                    s = d.createElement("script");
                s.src = "https://junpark.disqus.com/embed.js";
                s.setAttribute("data-timestamp", +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript
            >Please enable JavaScript to view the <a
                href="https://disqus.com/?ref_noscript"
                >comments powered by Disqus.</a
            ></noscript
        >
    </body>
</html>
